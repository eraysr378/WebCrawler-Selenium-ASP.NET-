@model WebApp1.Models.SearchedItem


<div class="col-md-4">
	<form asp-action="AddEvent">
		<input asp-for="EventType" value="3" style="display:none" />
		<div class="form-group" id="divActionClick">
			<div>Selected Event: Read Inner HTML</div>
			<input asp-for="XPath" placeholder="Enter XPath here" class="form-control" />
			<span asp-validation-for="XPath" class="text-danger"></span>
			<label asp-for="IsGroup"> More than one element will be read</label>
			<input asp-for="IsGroup" type="checkbox" value="true"/>
			<button asp-action="AddAttributeName" class="btn btn-success">Add Attribute Name</button>
			<button asp-action="ShowAttributeNames" class="btn btn-success">Show Attribute Names</button>
			<div class="form-group">
		    <input type="submit" value="Continue" class="btn btn-primary" />
		    <a href="/Home/SelectedItemsList" class="btn btn-danger">Cancel</a>
	    </div>
    </div>
	</form>
</div>